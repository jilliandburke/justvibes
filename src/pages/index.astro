---
import Layout from '../layouts/Layout.astro';
import CurrentBook from '../components/CurrentBook.astro';
import CurrentMusic from '../components/CurrentMusic.astro';
---

<Layout>
  <div class="flex flex-col gap-5 justify-center w-full max-w-2xl">
    <div class="flex gap-3 w-full">
      <CurrentBook />
      <CurrentMusic />
    </div>
    <div class="p-5 border-2 border-blue-600 dark:border-blue-400 rounded-xl mt-10">
      <h5 class="font-semibold mb-2">latest book review</h5>
      <p>here's the thing about the book</p>
    </div>
    <div class="p-5 border-2 border-green-600 dark:border-green-400 rounded-xl">
      <h5 class="font-semibold mb-2">latest music rec</h5>
      <p>here's the thing about the music</p>
    </div>
    <div class="p-5 border-2 border-orange-600 dark:border-orange-400 rounded-xl">
      <h5 class="font-semibold mb-2">latest code project</h5>
      <p>here's the thing about the code</p>
    </div>
  </div>
</Layout>
