---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="flex flex-col gap-5 justify-center w-full max-w-xl">
    <div class="flex gap-3 w-full">
      <div class="flex justify-center w-full p-2 border border-blue-400 rounded-xl"><p>current read</p></div>
      <div class="flex justify-center w-full p-2 border border-green-400 rounded-xl"><p>current music</p></div>
    </div>
    <div class="p-5 border border-blue-400 rounded-xl">
      <h5 class="font-semibold mb-2">latest book review</h5>
      <p>here's the thing about the book</p>
    </div>
    <div class="p-5 border border-green-400 rounded-xl">
      <h5 class="font-semibold mb-2">latest music rec</h5>
      <p>here's the thing about the music</p>
    </div>
    <div class="p-5 border border-red-400 rounded-xl">
      <h5 class="font-semibold mb-2">latest code project</h5>
      <p>here's the thing about the code</p>
    </div>
  </div>
</Layout>
